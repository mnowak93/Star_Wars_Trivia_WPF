<Window x:Class="SWTrivia.Menu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SWTrivia"
        mc:Ignorable="d"
        Title="Star Wars Trivia" Height="200" Width="450" ResizeMode="NoResize"
        WindowStartupLocation ="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="17*"/>
            <RowDefinition Height="99*"/>
            <RowDefinition Height="25*"/>
            <RowDefinition Height="42*"/>
            <RowDefinition Height="38*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="49*"/>
            <ColumnDefinition Width="115*"/>
            <ColumnDefinition Width="116*"/>
            <ColumnDefinition Width="115*"/>
            <ColumnDefinition Width="49*"/>
        </Grid.ColumnDefinitions>

        <TextBox x:Name="txtScore" Grid.Row="1" Grid.Column="1"  Grid.ColumnSpan="3" IsReadOnly="True" FontSize="20" TextWrapping="Wrap" VerticalAlignment="Center" HorizontalAlignment="Center" BorderThickness="0"/>
        <Button x:Name="btnPlay" Grid.Column="2" Grid.Row="3" Click="btnPlay_Click">Play</Button>
    </Grid>
</Window>
